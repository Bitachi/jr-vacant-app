<li id="micropost-<%= micropost.id %>">

  <div class="post-delete">
    <% if admin_or_yours?(micropost) %>
      <%= link_to micropost, method: :delete,
                                data: { confirm: "本当に削除しますか？" } do %><i class="fa fa-remove admin-page"></i><%end%>
    <%end%>
  </div>
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>

  <%if micropost.area.present? and micropost.category.present? %>
    <span class="hash-of-post"><%= "#" + micropost.area + " #" + micropost.category %></span>
  <%end%>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>

</li>
