  <div class="container">
    <%= link_to "JR空席通知アプリ", root_path, id: "logo" %>
    <nav>
      <div class="colleapse navbar-colleapse" id="navbar">
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="/" class="dropdown-toggle" data-toggle="dropdown">
              ホーム <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "このアプリについて", about_path %></li>
              <li><%= link_to "使い方", howto_path %></li>
              <li><%= link_to "通知の仕組み", structure_path %></li>
